/* pages/my/my.wxss */

.my-wrap {
  background: #ebebf1;
  width: calc(100vw);
  height: calc(100vh);
}

.icon-right {
  background: #fff url('data:image/png;base64,') no-repeat calc(90vw) center;
  background-size: 50rpx;
}

.my-header {
  padding: 50rpx 30rpx;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  float: left;
  margin-right: 30rpx;
  overflow: hidden;
}

.name {
  display: inline-block;
  font-size: 34rpx;
}

.roles {
  display: block;
  font-size: 32rpx;
  height: 110rpx;
  line-height: 110rpx;
}

.list {
  margin-top: 30rpx;
  padding-left: 30rpx;
  background: #fff;
}

.list view {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #e8e9e8;
  font-size: 30rpx;
}

.list-right-icon {
  float: left;
  width: 40rpx;
  height: 40rpx;
  margin: 30rpx 20rpx 0 0;
  display: block;
}

.weichat-auth {
  background: #f7de62;
  font-size: 26rpx;
  color: #fff;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 20rpx;
  float: right;
  text-indent: -30rpx;
  padding-right: 15rpx;
  margin: 20rpx 50rpx 0 0;
}

.weichat-auth image {
  float: left;
  width: 120rpx;
  height: 40rpx;
  margin-top: 15rpx;
}
